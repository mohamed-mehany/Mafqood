//{:dir => 'rtl'}
%center
  %h1
    = t('missing_posts.page_title')

= simple_form_for @missing_post, :html => {:multipart => true} do |f|
  %div.row
    %div.large-12.small-12.columns
      %fieldset
        %legend
          = t('missing_posts.form_title')
        = f.input :gender, as: :radio_buttons, radio_buttons_style: :nested, collection: [t('missing_posts.male'), t('missing_posts.female')], label: t('missing_posts.gender')
        = f.input :age, label: t('missing_posts.approximate_age'), placeholder: t('missing_posts.age_placeholder')
        = f.input :location, label: t('missing_posts.location'), placeholder: t('missing_posts.location_placeholder')
        = f.input :image, as: :file, label: t('missing_posts.image'), input_html: { accept: 'image/*' }
        = f.input :description, label: t('missing_posts.description'), as: :text, placeholder: t('missing_posts.description_placeholder')
        = f.input :special_signs, label: t('missing_posts.special_signs'), as: :text, placeholder: t('missing_posts.signs_placeholder')
        %strong
          = t('missing_posts.reporter_info')
        = f.input :reporter_name, label: t('missing_posts.reporter_name'), placeholder: t('missing_posts.name_placeholder')
        = f.input :reporter_phone, label: t('missing_posts.reporter_phone'), placeholder: t('missing_posts.phone_placeholder')
        %br
        %center
          =f.button :submit, t('missing_posts.submit_button')
