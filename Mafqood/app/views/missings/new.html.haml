//{:dir => 'rtl'}
%center
  %h1
    = t('missings.page_title')

= simple_form_for @missing, :html => {:multipart => true} do |f|
  %div.row
    %div.large-12.small-12.columns
      %fieldset
        %legend
          = t('missings.form_title')
        = f.input :gender, as: :radio_buttons, radio_buttons_style: :nested, collection: [t('missings.male'), t('missings.female')], label: t('missings.gender')
        = f.input :age, label: t('missings.age'), placeholder: t('missings.age_placeholder')
        = f.input :location, label: t('missings.location'), placeholder: t('missings.location_placeholder')
        = f.input :image, as: :file, label: t('missings.image'), input_html: { accept: 'image/*' }
        = f.input :description, label: t('missings.description'), as: :text, placeholder: t('missings.description_placeholder')
        = f.input :special_signs, label: t('missings.special_signs'), as: :text, placeholder: t('missings.signs_placeholder')
        %strong
          = t('missings.reporter_info')
        = f.input :reporter_name, label: t('missings.reporter_name'), placeholder: t('missings.name_placeholder')
        = f.input :reporter_phone, label: t('missings.reporter_phone'), placeholder: t('missings.phone_placeholder')
        %br
        %center
          =f.button :submit, t('missings.submit_button')
